{
	"manifest_version": 2,
	"name": "WaniKani Highlighter",
	"version": "0.1",
	"description": "Highlights your vocabulary/kanji on webpages.",
	"browser_action": {
		"default_title": "WaniKani Highlighter",
		"default_popup": "html/popup.html"
	},
	"permissions": [
		"storage",
		"*://*/*"
	],
	"background": {
		"scripts": ["/js/helper.js", "/js/background.js"]
	}
}